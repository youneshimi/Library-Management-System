@{
    ViewData["Title"] = "Bibliothèque";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Library Management System</title>

    <!-- Inclure Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Styles personnalisés -->
    <style>
        /* Styles personnalisés pour le carrousel */
        .carousel-caption {
            background: rgba(0, 0, 0, 0.7);
            color: #fff;
            border-radius: 5px;
            padding: 10px;
        }

        /* Styles personnalisés pour les boutons */
        .btn-maroon {
            background-color: #8B0000; /* Maroon */
            color: #fff;
        }

            .btn-maroon:hover {
                background-color: #800000; /* Darker Maroon on hover */
            }

        .btn-yellow {
            background-color: #FFD700; /* Yellow */
            color: #000;
        }

            .btn-yellow:hover {
                background-color: #FFC100; /* Slightly darker Yellow on hover */
            }

        .btn-green {
            background-color: #008000; /* Green */
            color: #fff;
        }

            .btn-green:hover {
                background-color: #006400; /* Darker Green on hover */
            }

        /* Styles personnalisés pour la section de contact */
        .contact-section {
            background: #f8f9fa;
            padding: 20px;
        }

        /* Styles personnalisés pour la section "About Us" */
        .about-us {
            background: #f9f9f9;
            padding: 40px;
        }

        .about-us-title {
            font-size: 24px;
            color: #333;
        }

        .about-us-text {
            font-size: 16px;
            color: #555;
        }

        .about-us-image {
            max-width: 100%;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        /* Styles personnalisés pour le pied de page */
        .footer {
            background: #343a40;
            color: #fff;
            text-align: center;
            padding: 10px 0;
        }
    </style>
</head>
<body>

    <!-- Barre de navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Bibliothèque</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#about">À Propos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#services">Services</a>
                    </li>
        
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Livres" asp-action="Index">Livre</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Abonnes" asp-action="Index">Abonnes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Emprunts" asp-action="Index">Emprunts</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Carrousel -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicateurs -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Slides -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="img/pic1.jpg" alt="Image 1" class="d-block w-50 mx-auto"> <!-- w-50 réduit la largeur de l'image à 50% -->
                <div class="carousel-caption">
                    <h3>Welcome to Our Library</h3>
                    <p>Discover a World of Knowledge</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="img/pic2.jpg" alt="Image 2" class="d-block w-50 mx-auto"> <!-- w-50 réduit la largeur de l'image à 50% -->
                <div class="carousel-caption">
                    <h3>Explore a Vast Collection</h3>
                    <p>Find Your Next Adventure</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="img/pic3.jpg" alt="Image 3" class="d-block w-50 mx-auto"> <!-- w-50 réduit la largeur de l'image à 50% -->
                <div class="carousel-caption">
                    <h3>Contact Us</h3>
                    <p>We're Here to Assist You</p>
                </div>
            </div>
        </div>


        <!-- Contrôles -->
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" ariahidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- Section "About Us" -->
    <div class="about-us" id="about">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="about-us-title">À Propos de Notre Bibliothèque</h2>
                    <p class="about-us-text">
                        Bienvenue dans notre bibliothèque moderne, où le voyage de la connaissance et de l'aventure commence. Notre vaste collection de livres s'adresse aux lecteurs de tous âges et de tous horizons. Explorez le vaste monde de la littérature, embarquez pour des voyages passionnants et enrichissez votre esprit avec une gamme diversifiée de ressources.
                    </p>
                </div>
                <div class="col-md-6">
                    <img src="img/Library Interior.jpg" alt="Intérieur de la Bibliothèque" class="img-fluid about-us-image">
                </div>
            </div>
        </div>
    </div>

    <!-- Section de Services -->
    <div class="services" id="services">
        <div class="container">
            <h2>Nos Services</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <img src="img/img1.png" class="card-img-top" alt="Service 1">
                        <div class="card-body">
                            <h5 class="card-title">Prêt de Livres</h5>
                            <p class="card-text">Empruntez des livres de notre vaste collection pour étudier à la maison.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img src="img/img2.png" class="card-img-top" alt="Service 2">
                        <div class="card-body">
                            <h5 class="card-title">E-books</h5>
                            <p class="card-text">Accédez à des milliers d'e-books en ligne pour votre lecture numérique.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img src="img/img3.png" class="card-img-top" alt="Service 3">
                        <div class="card-body">
                            <h5 class="card-title">Espaces d'Étude</h5>
                            <p class="card-text">Profitez d'espaces tranquilles pour étudier et faire des recherches.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- Pied de page -->
    <div class="footer">
        <p>&copy; 2023 Bibliothèque. Tous droits réservés.</p>
    </div>

    <!-- Inclure jQuery (requis par Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Inclure Popper.js (requis par Bootstrap) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <!-- Inclure Bootstrap JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

 
    
</body>
</html>
